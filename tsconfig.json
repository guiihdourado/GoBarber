{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./packages",
    "paths": {
      "@server/modules/*": ["server/src/modules/*"],
      "@server/config/*": ["server/src/config/*"],
      "@server/shared/*": ["server/src/shared/*"]
    },
  }
}
